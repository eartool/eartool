{
  "files": [".monorepolint.config.mjs"],
  "compilerOptions": {
    "checkJs": true,

    "target": "ESNext",
    "lib": ["ES2020"],

    "module": "NodeNext",
    "moduleResolution": "nodenext",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "verbatimModuleSyntax": true,

    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
