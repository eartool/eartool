{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2020"],

    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,

    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "verbatimModuleSyntax": true,

    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "lib"]
}
